@import 'modules/_theme'

.header {
	background: $dark-gray1;
	height: auto;
	padding: 27px 115px;
	width: 100%;
	
	&-h1 {
		color: $gray2;
		font-style: italic;	
		font-weight: 300;
		text-transform: uppercase;
		
		span {
			font-weight: 500;
		}
	}	
	&-nav {
		li a {
			color: $gray2;			
		}		
	}
	&-email {
		&__input {
			background: transparent;
			border: 1px solid $gray3;
			border-radius: 2px;
			padding: 5px;
		}
		&__button {
			background: transparent;
			border: 1px solid $gray1;
			border-radius: 2px;
			color: #fff;
			cursor: pointer;
			font-style: italic;
			padding: 5px;	
			text-transform: uppercase;	
		}
	}
}
.main {
	&-banner {
		background: $dark-gray1 url('/img/chamada-background.png') no-repeat center center;		
		background-size: cover;
		height: auto;
		padding: 100px 115px;
		width: 100%;

		&__text {
			padding: 0 130px;
			
		}
		&__tag {
			color: $dark-gray2;
			font-style: italic;
			text-transform: uppercase;

		}
		&__title {
			color: #fff;
			font-size: 30pt;
			font-weight: 500;

		}
		&__link {
			border: 2px solid $orange;
			border-radius: 2px;
			color: $orange;
			font-style: italic;
			font-weight: 300;
			padding: 5px;	
			text-transform: uppercase;
			
			&:focus,
			&:hover {
				background: $orange;
				color: #fff;				
			}			
			span {
				font-weight: 500;
			}					
		}
	}
	&-nav {
		height: auto;
		padding: 35px 0;
		text-align: center;
		width: 100%;
		
		li a {
			color: $gray2;
			font-style: italic;
			text-transform: uppercase;	
			
			span {
				color: #000;
			}			
		}
	}
	&-posts {
		padding: 0 115px;
		width: 100%;

		&__post {
			cursor: pointer;
			position: relative;
			width: 33%;
			
			&:focus,			
			&:hover {
				.main-posts__post-text {
					bottom: 85px;
				}		
				.main-posts__post-tag {
					color: #fff;				
				}
				.main-posts__post-link {
					visibility: hidden;
				}		
			}
			&-text {
				bottom: 0;
				left: 0;
				padding: 0 90px 20px 30px;
				position: absolute;		
			}
			&-tag {
				color: $orange;
				font-style: italic;
				text-transform: uppercase;	
				visibility: visible;
			}
			&-title {
				color: #fff;
				font-size: 15pt;
			}
			&-link {
				background: $orange;
				border-radius: 10px 0 0 10px;
				bottom: 10px;
				color: #fff;
				font-style: italic;
				padding: 5px;
				position: absolute;
				right: 0;
				text-transform: uppercase;	
				
				span {
					font-weight: 500;
				}
			}
			&-1 {
				background: $dark-gray1 url('/img/post-thumb-01.jpg') no-repeat center center;	
				background-size: cover;
				height: 530px;
			}
			&-2 {
				background: $dark-gray1 url('/img/post-thumb-02.jpg') no-repeat center center;
				background-size: cover;	
				height: 265px;
			}
			&-3 {
				background: $dark-gray1 url('/img/post-thumb-03.jpg') no-repeat center center;	
				background-size: cover;
				height: 265px;
			}
		}
	}
}